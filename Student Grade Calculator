
package studentgradecalculator;

import java.util.Scanner;


public class StudentGradeCalculator {


    public static void main(String[] args) {
     
        Scanner scanner = new Scanner(System.in);
        
        //Asking user to enter number of subject
        System.out.print("Enter the number of subjects: ");
        int numSubjects = scanner.nextInt();

        int totalMarks = 0;
        
        //Using fro loop to ask user enter marks for all subjects
        for (int i = 1; i <= numSubjects; i++) {
            //Asking user to enter marks for subjects
            System.out.print("Enter marks obtained in subject " + i + ": ");
            int marks = scanner.nextInt();
            
            //Adding all marks
            totalMarks += marks;
        }
        
        //getting average marks
        double averagePercentage = (double) totalMarks / numSubjects;
        
        //Assigning grades according to the average obtained
        char grade;
        if (averagePercentage >= 90) {
            grade = 'A';
        } else if (averagePercentage >= 80) {
            grade = 'B';
        } else if (averagePercentage >= 70) {
            grade = 'C';
        } else if (averagePercentage >= 60) {
            grade = 'D';
        } else {
            grade = 'F';
        }
        
        //printing results
        System.out.println("\nResults:");
        System.out.println("Total Marks: " + totalMarks);
        System.out.println("Average Percentage: " + averagePercentage + "%");
        System.out.println("Grade: " + grade);

        
    }
}
  
